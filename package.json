{
  "name": "star-nexus",
  "version": "0.0.5",
  "private": true,
  "packageManager": "pnpm@8.3.0",
  "description": "Manage all your starred pages.",
  "author": "Alex Liu <larch.liu@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/LarchLiu/star-nexus",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LarchLiu/star-nexus.git"
  },
  "bugs": {
    "url": "https://github.com/LarchLiu/star-nexus/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev:core": "turbo run dev --filter=@starnexus/core",
    "dev:docs": "turbo run dev --filter=docs",
    "dev:ext": "turbo run dev --filter=chrome-extension...",
    "dev:pic": "turbo run dev --filter=picture-bed",
    "build": "turbo run build",
    "build:core": "turbo run build --filter=@starnexus/core",
    "build:docs": "turbo run build --filter=docs",
    "build:ext": "turbo run build --filter=chrome-extension...",
    "build:tg": "turbo run build --filter=telegram-bot...",
    "build:pic": "turbo run build --filter=picture-bed",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag",
    "test": "vitest run",
    "test:core": "turbo run test --filter=@starnexus/core",
    "tscheck": "turbo run tscheck",
    "lint": "eslint --cache .",
    "lint:fix": "turbo run lint -- --fix",
    "up": "taze major -r",
    "up:w": "taze major -r -w"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.5",
    "@unocss/eslint-config": "^0.51.4",
    "bumpp": "^9.1.0",
    "eslint": "^8.39.0",
    "lint-staged": "^13.2.2",
    "rimraf": "^5.0.0",
    "simple-git-hooks": "^2.8.1",
    "taze": "^0.10.1",
    "turbo": "^1.9.3",
    "typescript": "^5.0.3",
    "vite": "^4.3.1",
    "vitest": "^0.30.1",
    "vue-tsc": "^1.6.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
