{
  "name": "star-nexus",
  "version": "0.0.7-beta.2",
  "private": true,
  "packageManager": "pnpm@8.5.0",
  "description": "Manage all your starred pages.",
  "author": "Alex Liu <larch.liu@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/LarchLiu/star-nexus",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LarchLiu/star-nexus.git"
  },
  "bugs": {
    "url": "https://github.com/LarchLiu/star-nexus/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev:core": "turbo run dev --filter=@starnexus/core",
    "dev:docs": "turbo run dev --filter=docs",
    "dev:ext-chrome": "turbo run dev --filter=chrome-extension...",
    "dev:pic": "turbo run dev --filter=picture-bed",
    "build": "turbo run build",
    "build:core": "turbo run build --filter=@starnexus/core",
    "build:docs": "turbo run build --filter=docs",
    "build:ext-chrome": "turbo run build --filter=chrome-extension...",
    "build:tg-cl": "turbo run build --filter=telegram-cl-bot...",
    "build:pic": "turbo run build --filter=picture-bed",
    "build:nuxt": "turbo run build --filter=@server/nuxt3...",
    "release": "bumpp package.json packages/**/**/package.json --commit --push --tag && pnpm --filter '@starnexus/*' publish --access public",
    "test": "vitest run",
    "test:core": "turbo run test --filter=@starnexus/core",
    "tscheck": "turbo run tscheck",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "up": "taze major -r",
    "up:w": "taze major -r -w"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.6",
    "@unocss/eslint-config": "^0.51.12",
    "bumpp": "^9.1.0",
    "eslint": "^8.40.0",
    "lint-staged": "^13.2.2",
    "rimraf": "^5.0.0",
    "simple-git-hooks": "^2.8.1",
    "taze": "^0.10.1",
    "turbo": "^1.9.4",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "vitest": "^0.31.0",
    "vue-tsc": "^1.6.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
