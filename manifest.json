{
  "manifest_version": 3,
  "name": "StarNexus",
  "version": "0.0.1",
  "description": "Manage all your Starred Project",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": ["https://api.notion.com/*", "https://github.com/*"],
  "content_scripts": [
    {
      "run_at": "document_idle",
      "js": ["content.js"],
      "matches": [
        "https://github.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  
  "options_page": "settings.html",
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["/background.js"],
      "matches": ["https://api.notion.com/*"],
      "use_dynamic_url": true
    }
  ]
}
